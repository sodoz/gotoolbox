= content main
  div class="small-12 small-centered columns"
    h2 All Projects
    div.category-filter
      <% range .Categories %>
        li <% .Name %>
      <% end %>

    div.all-projects
      table
        thead
          tr
            th Name
            th Category
            th User
            th Date
        tbody
          <% range .Projects %>
            tr
              td
                a href=<% .Link %> target="_blank"
                  <% .Name %>
              td
                <% .Category.Name %>
              td
                <% .User.GitHubName %>
              td
                <% DateFormat .CreatedAt %>
          <% end %>
